<h1>Blog Posts</h1>
<% @blog_posts.each do |blog_post| %>
  <% if blog_post.draft? %>
    <div class="bg-gray-100 text-gray-900 p2 rounded">Draft</div>
  <% end %>
  <% if blog_post.scheduled? %>
    <div class="bg-blue-100 text-blue-900 p2 rounded">Scheduled</div>
  <% end %>
  <h2><%= link_to blog_post.title, blog_post_path(blog_post) %></h2>
  <%= blog_post.body %>
<% end %>
